package helloword;

import java.util.Scanner;

public class hello {
	public static void main(String[] args) {
		int classNum = 1;
		int classMem =3;
		int avg=0;
		int sum=0;
		Scanner input = new Scanner(System.in);
		int score ;
		int i;
		int j;
		for(i=0; i<classNum;i++){
			for(j=0;j<classMem;j++){
				System.out.println("输入第"+j+"个学生成绩");
				score = input.nextInt();
				sum += score;
			}
			avg = sum/j;
			System.out.println("平均分"+avg);
		}
		
	}
}
