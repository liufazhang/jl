package helloword;

import java.util.Scanner;

public class hello {
	public static void main(String[] args) {
		int classNum = 1;
		int classMem =3;
		int avg=0;
		int sum=0;
		Scanner input = new Scanner(System.in);
		int score ;
		for(int i=0; i<classNum;i++){
			for(int j=0;j<classMem;j++){
				System.out.print("输入第"+i+"个学生成绩");
				score = input.nextInt();
				sum += score;
			}
			avg = sum/i;
			System.out.println("平均分"+avg);
		}
		
	}
}
